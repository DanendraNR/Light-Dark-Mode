<resources>
    <!-- Base application theme. -->
    <style name="Theme.LightDarkMode" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_bg_color</item>
        <item name="colorPrimaryVariant">@color/main_bg_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/main_bg_color</item>
    </style>

    <style name="main_bg">
        <item name="android:background">@color/main_bg_color</item>
    </style>

</resources>